<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="@+id/card_1"
        app:layout_constraintStart_toStartOf="@+id/card_1"
        app:layout_constraintTop_toTopOf="@+id/card_1" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:text="Lokesh Kedia"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toTopOf="@+id/card_1" />

    <ImageView
        android:id="@+id/location_pin"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:src="@drawable/ic_location_pin"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:tint="@color/green_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:text="1111/10, Model Town, Delhi"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintStart_toEndOf="@+id/location_pin"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/battery_card"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="2dp"
        app:cardElevation="16dp"
        app:layout_constraintStart_toStartOf="@+id/card_1"
        app:layout_constraintTop_toBottomOf="@+id/img_user">

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/ic_battery"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_margin="2dp"
        android:elevation="16dp"
        android:src="@drawable/ic_battery"
        app:layout_constraintBottom_toBottomOf="@+id/battery_card"
        app:layout_constraintStart_toStartOf="@+id/battery_card"
        app:layout_constraintTop_toTopOf="@+id/battery_card"
        app:tint="@color/green_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:text="80%"
        android:textColor="@color/green_guard"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/battery_card"
        app:layout_constraintEnd_toEndOf="@+id/battery_card"
        app:layout_constraintTop_toTopOf="@+id/battery_card" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16sp"
        android:text="16:40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/card_1"
        app:layout_constraintTop_toTopOf="@+id/card_1" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="24dp"
        android:elevation="16dp"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="@+id/card_1"
        app:layout_constraintEnd_toEndOf="@+id/card_1" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/distance_card"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="48dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="16dp"
        app:layout_constraintStart_toEndOf="@+id/battery_card"
        app:layout_constraintBottom_toBottomOf="@+id/card_1">

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/distance_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_margin="2dp"
        android:elevation="16dp"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="@+id/distance_card"
        app:layout_constraintStart_toStartOf="@+id/distance_card"
        app:layout_constraintTop_toTopOf="@+id/distance_card"
        app:tint="@color/purple_200" />

    <TextView
        android:id="@+id/distance_mile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:layout_marginLeft="4dp"
        android:text="200M"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/distance_card"
        app:layout_constraintStart_toEndOf="@+id/distance_icon"
        app:layout_constraintTop_toTopOf="@+id/distance_card" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/network_card"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="56dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="16dp"
        app:layout_constraintStart_toEndOf="@+id/distance_card"
        app:layout_constraintBottom_toBottomOf="@+id/card_1">

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/network_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_margin="2dp"
        android:elevation="16dp"
        android:src="@drawable/ic_wi_fi"
        app:layout_constraintBottom_toBottomOf="@+id/network_card"
        app:layout_constraintStart_toStartOf="@+id/network_card"
        app:layout_constraintTop_toTopOf="@+id/network_card"
        app:tint="@color/green_guard" />

    <TextView
        android:id="@+id/network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:layout_marginLeft="4dp"
        android:text="WiFi"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/network_card"
        app:layout_constraintStart_toEndOf="@+id/network_icon"
        app:layout_constraintTop_toTopOf="@+id/network_card" />



</androidx.constraintlayout.widget.ConstraintLayout>